---
import HospitalIcon from "./icons/HospitalIcon.astro";
import MailIcon from "./icons/MailIcon.astro";
import ComisariaIcon from "./icons/ComisariaIcon.astro";
---

<section id="telefonosutiles" class="pt-8">
  <h2
    class="mb-12 text-2xl font-bold bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat p-1"
  >
    Teléfonos útiles
  </h2>
  <address class="not-italic flex flex-col sm:flex-row sm:flex-wrap gap-6">
    <div
      class="flex flex-col justify-center items-center gap-1 px-4 py-2 border-2 border-custom-green rounded-lg bg-white sm:min-w-60 sm:aspect-square sm:h-40"
    >
      <a
        href="tel:+5493482524950"
        class="block font-bold text-lg relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-[width] hover:after:w-full"
        title="Llamar al hospital de Villa Ana">+54 9 3482 524950</a
      >
      <HospitalIcon class="text-custom-red" />
      <span>Hospital</span>
    </div>
    <div
      class="flex flex-col justify-center items-center gap-1 px-4 py-2 border-2 border-custom-green rounded-lg bg-white sm:min-w-60 sm:aspect-square sm:h-40"
    >
      <a
        href="tel:+5493482524950"
        class="block font-bold text-lg relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-[width] hover:after:w-full"
        title="Llamar al correo de Villa Ana">+54 9 3482 524950</a
      >
      <MailIcon class="text-yellow-500" />
      <span>Correo</span>
    </div>
    <div
      class="flex flex-col justify-center items-center gap-1 px-4 py-2 border-2 border-custom-green rounded-lg bg-white sm:min-w-60 sm:aspect-square sm:h-40"
    >
      <a
        href="tel:+5493482524950"
        class="block font-bold text-lg relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-[width] hover:after:w-full"
        title="Llamar a la policia de Villa Ana">+54 9 3482 524950</a
      >
      <ComisariaIcon class="text-custom-blue" />
      <span>Policia</span>
    </div>
  </address>
</section>
