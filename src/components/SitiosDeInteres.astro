---
import { SITIOSINTERES } from "@/utils/data.js";

const { slice } = Astro.props;
---

<div class="sitiosinteres__container">
  {
    SITIOSINTERES.slice(0, slice).map((sitio) => (
      <div class="sitiosinteres__item">
        <img src={`/${sitio.image.src}`} alt={sitio.image.alt} />
        <a href={sitio.link.href} target="_blank" rel="noopener noreferrer">
          <h3>{sitio.link.label}</h3>
        </a>
      </div>
    ))
  }
</div>

<style>
  .sitiosinteres__container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: white;

    @media (width >= 768px) {
      flex-direction: row;
      flex-wrap: wrap;
    }
  }

  .sitiosinteres__item {
    display: flex;
    flex-grow: 1;
    position: relative;
    overflow: hidden;
    min-height: 8rem;
    min-width: 24rem;
    border-radius: 0.5rem;
    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8));
    box-shadow: var(--shadow-black-lg);

    &:active {
      translate: 0 0.25rem;
    }

    &:is(:hover, :focus-within) {
      img {
        scale: 1.1;
      }
    }
  }

  img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: left top;
    z-index: -10;
    transition: scale 0.3s;
  }

  a {
    align-self: stretch;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 0.5rem 1rem;
  }

  h3 {
    font-weight: 800;
    text-align: center;
    text-wrap: balance;
    font-size: 1.25rem;
    text-shadow: var(--text-shadow-black);
  }
</style>
