---
import "../utils/lite-yt-embed.css";
---

<section id="videos" class="pt-8">
  <h2
    class="mb-12 text-2xl font-bold bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat"
  >
    Videos
  </h2>
  <div
    class="grid grid-cols-[repeat(auto-fit,minmax(min(384px,100%),1fr))] gap-4"
  >
    <lite-youtube
      videoid="ztxziJF9TkU"
      title="Villa Ana, Santa Fe"
      class="rounded-sm"></lite-youtube>
    <lite-youtube
      videoid="5JcrDPhzaIM"
      title="Muerte y resurrección de Villa Ana"
      class="rounded-sm"></lite-youtube>
    <lite-youtube
      videoid="jKuHptCvilQ"
      title="VILLA ANA ★ 108 AÑOS 🎬"
      class="rounded-sm"></lite-youtube>
    <lite-youtube
      videoid="uPjWgSfuDWI"
      title="Comuna de Villa Ana - Punto HD"
      class="rounded-sm"></lite-youtube>
    <lite-youtube
      videoid="oOq4QdsspSY"
      title="🔴⚪🔵 #DePuebloEnPueblo - Villa Ana – Dpto. Gral. Obligado"
      class="rounded-sm"></lite-youtube>
    <lite-youtube
      videoid="QTMusu5WmhY"
      title="VISITÁ VILLA ANA - Spot Turismo Villa Ana"
      class="rounded-sm"></lite-youtube>
    <a
      href="#videos"
      class="flex justify-center items-center aspect-video cursor-pointer border rounded hover:scale-105 transition-transform duration-300 [background-image:linear-gradient(to_right,black,transparent),linear-gradient(to_left,black,transparent),url(/collage-videos.avif)] bg-center bg-cover text-white font-bold [text-shadow:0px_0px_4px_black]"
      >Ver mas videos</a
    >
  </div>
</section>
<script src="../utils/lite-yt-embed.js"></script>
