---
import Isologo from "./Isologo.astro";
import MenuIcon from "./icons/MenuIcon.astro";
import XIcon from "./icons/XIcon.astro";
import MenuList from "./MenuList.astro";

const menu = [
  {
    text: "Mi Pueblo",
    links: [
      { text: "Turismo", href: "/turismo" },
      {
        text: "Galería",
        links: [
          { text: "Fotos", href: "/fotos" },
          { text: "Videos", href: "/videos" },
        ],
      },
      { text: "Historia", href: "/historia" },
      { text: "La Forestal", href: "#" },
      { text: "Instituciones", href: "#" },
    ],
  },
  {
    text: "Gobierno",
    links: [
      { text: "Autoridades", href: "/autoridades" },
      { text: "Noticias", href: "#" },
      { text: "Trámites", href: "/tramites" },
      { text: "Contacto", href: "/contacto" },
    ],
  },
  {
    text: "Ciudadanía",
    links: [
      { text: "Contactos Útiles", href: "/contactosutiles" },
      { text: "Sitios de interés", href: "/sitiosdeinteres" },
    ],
  },
];
---

<header>
  <div class="container">
    <a id="logo-link" href="/">
      <Isologo />
    </a>
    <button
      id="menu-btn"
      aria-label="Abrir menú"
      aria-expanded="false"
      aria-controls="menu"
    >
      <MenuIcon />
      <XIcon id="close-menu-icon" />
    </button>
    <nav id="menu">
      <MenuList items={menu} />
    </nav>
  </div>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const $menuBtn = document.querySelector("#menu-btn");
    const $menu = document.querySelector("#menu");

    function closeMenu() {
      $menu.classList.remove("open");
      $menuBtn.setAttribute("aria-label", "Abrir menú");
      $menuBtn.setAttribute("aria-expanded", "false");
    }

    function handleClickMenuBtn() {
      if ($menuBtn.matches("[aria-expanded='false']")) {
        $menu.classList.add("open");
        $menuBtn.setAttribute("aria-label", "Cerrar menú");
        $menuBtn.setAttribute("aria-expanded", "true");
      } else {
        closeMenu();
      }
    }

    function handleClickMenu(e) {
      const $clickedElement = e.target;
      if ($clickedElement.matches(".dropdown-btn")) {
        const isExpanded =
          !$clickedElement.nextElementSibling.classList.toggle("open");
        if (isExpanded) {
          $clickedElement.setAttribute("aria-expanded", "false");
        } else {
          $clickedElement.setAttribute("aria-expanded", "true");
        }
        return;
      }

      if ($clickedElement.matches(".link")) closeMenu();
    }

    $menuBtn.addEventListener("click", handleClickMenuBtn);
    $menu.addEventListener("click", handleClickMenu);
  });
</script>

<style is:global>
  body:has(#menu.open) {
    & #hamburger-icon {
      display: none;
    }

    & #close-menu-icon {
      display: block;
    }

    @media (width < 768px) {
      overflow: hidden;
    }
  }

  body:not(:has(#menu.open)) {
    & #hamburger-icon {
      display: block;
    }

    & #close-menu-icon {
      display: none;
    }
  }

  #menu > ul {
    @media (width >= 768px) {
      display: flex;
      flex-direction: row;
      gap: 1.5rem;
    }
  }

  #menu > ul > li > .dropdown-btn {
    @media (width >= 768px) {
      padding-top: 0;
      padding-left: 0;
      border: none;

      &::after {
        top: -3px;
      }
    }
  }

  #menu > ul > li > a {
    @media (width >= 768px) {
      padding-top: 0;
      padding-inline: 0;
      border: none;
    }
  }

  #menu > ul > li li a:hover {
    @media (width >= 768px) {
      background-color: color-mix(in srgb, rgb(231, 230, 228), var(--blue) 20%);
    }
  }

  #menu > ul > li ul {
    padding-left: 1rem;

    @media (width >= 768px) {
      padding-left: 0;
      background-color: color-mix(in srgb, rgb(231, 230, 228), var(--blue) 10%);
    }
  }

  #menu > ul > li > ul {
    @media (width >= 768px) {
      position: absolute;
      border: 1px solid black;
      border-bottom: none;
      min-width: 16rem;
      max-width: 24rem;
      right: 0;
    }
  }

  #menu > ul > li > ul ul {
    @media (width >= 768px) {
      position: absolute;
      border: 1px solid black;
      border-bottom: none;
      min-width: 16rem;
      max-width: 24rem;
      top: -1px;
      transform: translateX(-100%);
    }
  }
</style>

<style>
  header {
    background-color: rgb(231, 230, 228);
    overflow-y: auto;
    scrollbar-width: thin;

    @media (width >= 768px) {
      overflow-y: visible;
    }

    & > div {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      align-content: flex-start;
      align-items: center;
      justify-content: space-between;
      margin-inline: auto;
      padding: 1rem;

      @media (width >= 768px) {
        display: flex;
        padding-inline: 2rem;
      }

      @media (width < 768px) {
        header:has(#menu.open) & {
          height: 100dvh;
        }
      }
    }
  }

  #menu {
    display: none;
    z-index: 10;
    padding-block: 1rem;
    grid-column: 1/3;

    &.open {
      display: block;
    }

    @media (width >= 768px) {
      display: block;
      transform: translateY(6px);
      padding-block: 0;
    }
  }

  #logo-link {
    justify-self: start;
    transition: scale 0.3s;

    &:is(:hover, :focus-visible) {
      scale: 1.05;
    }
  }

  #menu-btn {
    justify-self: end;
    transition: scale 0.3s;

    &:is(:hover, :focus-visible) {
      scale: 1.05;
    }

    @media (width >= 768px) {
      display: none;
    }
  }
</style>
