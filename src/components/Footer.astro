---
import Isologo from "./Isologo.astro";
import MailIcon from "./icons/MailIcon.astro";
import MapPinIcon from "./icons/MapPinIcon.astro";
import PhoneIcon from "./icons/PhoneIcon.astro";
---

<footer class="bg-[rgb(231,230,228)] mt-20">
  <div class="container mx-auto p-4 flex flex-col gap-6">
    <a
      href="/"
      class="self-start hover:scale-105 focus-visible:scale-105 transition-transform"
    >
      <Isologo />
    </a>
    <address id="contacto" class="flex flex-col gap-y-2">
      <div class="flex gap-2">
        <MailIcon />
        <a
          href="mailto:comunavillaanastafe@hotmail.com"
          title="Enviar un email a la Comuna de Villa Ana"
          class="transition-all relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-all hover:after:w-full focus-visible:after:w-full"
          >comunavillaanastafe@hotmail.com</a
        >
      </div>
      <div class="flex gap-2">
        <PhoneIcon />
        <a
          href="tel:+543482465004"
          title="Llamar al teléfono +54 3482 465004 de la Comuna de Villa Ana"
          class="transition-all relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-all hover:after:w-full focus-visible:after:w-full"
          >+54 3482 465004</a
        >
        <span aria-hidden="true">|</span>
        <a
          href="tel:+543482465005"
          title="Llamar al teléfono +54 3482 465005 de la Comuna de Villa Ana"
          class="transition-all relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-all hover:after:w-full focus-visible:after:w-full"
          >+54 3482 465005</a
        >
      </div>
      <div class="flex gap-2">
        <MapPinIcon />
        <a
          href="https://www.google.com/maps/place/COMUNA+DE+VILLA+ANA/@-28.4931731,-59.6129274,19z/data=!4m6!3m5!1s0x944f2557ade437cb:0xbb58e41395fcdc2a!8m2!3d-28.4930172!4d-59.6129197!16s%2Fg%2F11gszqv0mf?authuser=0&entry=ttu"
          target="_blank"
          rel="noopener noreferrer"
          title="Ver a la Comuna de Villa Ana en Google Maps"
          class="transition-all relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-all hover:after:w-full focus-visible:after:w-full"
        >
          25 de mayo esquina Uruguay, Villa Ana, Santa Fe, Argentina
        </a>
        <p></p>
      </div>
    </address>
    <div class="flex gap-2">
      <a
        href="https://facebook.com/comuna.villaana.50"
        target="_blank"
        rel="noopener noreferrer"
        title="Ir a la página de Facebook de la Comuna de Villa Ana"
        class="bg-[--blue] p-3 rounded-full hover:scale-105 focus-visible:scale-105 transition-transform"
      >
        <img src="/facebook-logo.avif" alt="Logo de Facebook" class="w-5" />
      </a>
      <a
        target="_blank"
        rel="noopener noreferrer"
        title="Ir a la página de Instagram de la Comuna de Villa Ana"
        class="bg-[--blue] p-3 rounded-full hover:scale-105 focus-visible:scale-105 transition-transform"
        onclick="alert('La Comuna de Villa Ana aún no tiene página de Instagram. En breve la estaremos creando.')"
      >
        <img src="/instagram-logo.svg" alt="Logo de Instagram" class="w-5" />
      </a>
      <a
        target="_blank"
        rel="noopener noreferrer"
        title="Ir al canal de Youtube de la Comuna de Villa Ana"
        class="bg-[--blue] p-3 rounded-full hover:scale-105 focus-visible:scale-105 transition-transform flex items-center"
        onclick="alert('La Comuna de Villa Ana aún no tiene canal de Youtube. En breve lo estaremos creando.')"
      >
        <img src="/youtube-logo.webp" alt="Logo de Youtube" class="w-5" />
      </a>
    </div>
    <p class="dev">
      Desarrollado por <a
        href="https://adanrodriguez.vercel.app/"
        target="_blank"
        rel="noopener noreferrer">Adán Rodríguez</a
      >
    </p>
  </div>
</footer>

<style>
  .dev {
    text-align: center;
    font-size: 0.75rem;

    & a {
      text-decoration: underline;
    }
  }
</style>
