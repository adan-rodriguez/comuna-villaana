---
import HeroLinks from "./HeroLinks.astro";
---

<section>
  <video id="hero-video" src="/hero-video.mp4" autoplay loop muted></video>
  <HeroLinks />
</section>

<style>
  section {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100dvh;
    max-height: 1080px;
    background: #000;
    z-index: 9;
  }

  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    mask-image: linear-gradient(to top, black 0%, transparent 100%);
  }
</style>
