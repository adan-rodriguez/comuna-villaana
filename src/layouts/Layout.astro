---
import MailIcon from "../components/icons/MailIcon.astro";
import MapPinIcon from "../components/icons/MapPinIcon.astro";
import MenuIcon from "../components/icons/MenuIcon.astro";
import PhoneIcon from "../components/icons/PhoneIcon.astro";
import Isologo from "../components/Isologo.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="logo.webp" />
    <title>{title}</title>
  </head>
  <body class="relative -z-20 bg-slate-950">
    <header class="flex justify-between items-center p-4 md:px-12 text-white">
      <a href="/" class="hover:scale-105 transition-all">
        <Isologo />
      </a>
      <div>
        <button class="md:hidden">
          <MenuIcon />
        </button>
        <nav class="hidden md:flex gap-6">
          <a href="#" class="hover:underline hover:underline-offset-8">
            Gobierno
          </a>
          <a href="#" class="hover:underline hover:underline-offset-8">
            Mi Pueblo
          </a>
          <a href="#" class="hover:underline hover:underline-offset-8">
            Noticias
          </a>
        </nav>
      </div>
    </header>
    <slot />
    <footer
      class="p-4 flex flex-col md:flex-row gap-6 justify-between items-center md:items-start bg-white"
    >
      <a href="/">
        <Isologo />
      </a>
      <address class="flex flex-col gap-y-2">
        <div class="flex gap-2">
          <MailIcon />
          <a href="mailto:comunavillaana@gmail.com">comunavillaana@gmail.com</a>
        </div>
        <div class="flex gap-2">
          <PhoneIcon />
          <a href="tel:+5493482524950">+54 9 3482 524950</a>
        </div>
        <div class="flex gap-2">
          <MapPinIcon />
          <a
            href="https://www.google.com/maps/place/COMUNA+DE+VILLA+ANA/@-28.4931731,-59.6129274,19z/data=!4m6!3m5!1s0x944f2557ade437cb:0xbb58e41395fcdc2a!8m2!3d-28.4930172!4d-59.6129197!16s%2Fg%2F11gszqv0mf?authuser=0&entry=ttu"
            target="_blank"
            rel="noopener noreferrer"
          >
            25 de mayo esquina Uruguay, Villa Ana, Santa Fe, Argentina
          </a>
          <p></p>
        </div>
      </address>
      <div class="flex gap-2">
        <a
          href="http://facebook.com/comuna.villaana.50"
          target="_blank"
          rel="noopener noreferrer"
          title="Ir a la página de Facebook de la Comuna de Villa Ana"
          class="bg-[#270E88] p-4 rounded-full hover:scale-105 transition-all"
        >
          <img src="facebook-logo.webp" alt="Logo de Facebook" class="w-6" />
        </a>
        <a
          target="_blank"
          rel="noopener noreferrer"
          title="Ir a la página de Instagram de la Comuna de Villa Ana"
          class="bg-[#270E88] p-4 rounded-full hover:scale-105 transition-all"
        >
          <img src="instagram-logo.svg" alt="Logo de Instagram" class="w-6" />
        </a>
        <a
          target="_blank"
          rel="noopener noreferrer"
          title="Ir al canal de Youtube de la Comuna de Villa Ana"
          class="bg-[#270E88] p-4 rounded-full hover:scale-105 transition-all flex items-center"
        >
          <img src="youtube-logo.webp" alt="Logo de Youtube" class="w-6" />
        </a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
</style>
