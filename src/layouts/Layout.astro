---
import "@fontsource-variable/onest";
import "@fontsource/alex-brush";
import Header from "../components/Header.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import MapPinIcon from "../components/icons/MapPinIcon.astro";
import PhoneIcon from "../components/icons/PhoneIcon.astro";
import Isologo from "../components/Isologo.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="logo.webp" />
    <title>{title}</title>
  </head>
  <body class="relative -z-20 bg-slate-950 text-white md:overflow-y-auto">
    <Header />
    <slot />
    <footer class="text-black bg-white">
      <div class="container mx-auto p-4 flex flex-col gap-6">
        <a href="/" class="self-start hover:scale-105 transition-transform">
          <Isologo />
        </a>
        <address id="contacto" class="flex flex-col gap-y-2">
          <div class="flex gap-2">
            <MailIcon />
            <a
              href="mailto:comunavillaana@gmail.com"
              title="Enviar un email a la Comuna de Villa Ana"
              class="transition-all relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-all hover:after:w-full"
              >comunavillaana@gmail.com</a
            >
          </div>
          <div class="flex gap-2">
            <PhoneIcon />
            <a
              href="tel:+5493482524950"
              title="Llamar a la Comuna de Villa Ana"
              class="transition-all relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-all hover:after:w-full"
              >+54 9 3482 524950</a
            >
          </div>
          <div class="flex gap-2">
            <MapPinIcon />
            <a
              href="https://www.google.com/maps/place/COMUNA+DE+VILLA+ANA/@-28.4931731,-59.6129274,19z/data=!4m6!3m5!1s0x944f2557ade437cb:0xbb58e41395fcdc2a!8m2!3d-28.4930172!4d-59.6129197!16s%2Fg%2F11gszqv0mf?authuser=0&entry=ttu"
              target="_blank"
              rel="noopener noreferrer"
              title="Ver a la Comuna de Villa Ana en Google Maps"
              class="transition-all relative after:absolute after:w-0 after:h-[1px] after:bottom-0 after:left-0 after:bg-black after:transition-all hover:after:w-full"
            >
              25 de mayo esquina Uruguay, Villa Ana, Santa Fe, Argentina
            </a>
            <p></p>
          </div>
        </address>
        <div class="flex gap-2">
          <a
            href="https://facebook.com/comuna.villaana.50"
            target="_blank"
            rel="noopener noreferrer"
            title="Ir a la página de Facebook de la Comuna de Villa Ana"
            class="bg-[#270E88] p-3 rounded-full hover:scale-105 transition-all"
          >
            <img src="facebook-logo.webp" alt="Logo de Facebook" class="w-5" />
          </a>
          <a
            target="_blank"
            rel="noopener noreferrer"
            title="Ir a la página de Instagram de la Comuna de Villa Ana"
            class="bg-[#270E88] p-3 rounded-full hover:scale-105 transition-all"
          >
            <img src="instagram-logo.svg" alt="Logo de Instagram" class="w-5" />
          </a>
          <a
            target="_blank"
            rel="noopener noreferrer"
            title="Ir al canal de Youtube de la Comuna de Villa Ana"
            class="bg-[#270E88] p-3 rounded-full hover:scale-105 transition-all flex items-center"
          >
            <img src="youtube-logo.webp" alt="Logo de Youtube" class="w-5" />
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    background: #13151a;
    background-size: 224px;
  }

  body {
    font-family: "Onest Variable", sans-serif;
  }
</style>
