---
import { ViewTransitions } from "astro:transitions";

// import "@fontsource-variable/onest";
import "@fontsource/alex-brush";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/avif" href="logo.avif" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="relative -z-20 bg-[color-mix(in_srgb,var(--skyblue),transparent_95%)] text-black md:overflow-y-auto"
  >
    <Header />
    <main
      class={`container mx-auto px-4 md:px-8 pb-4 min-h-dvh ${Astro.url.pathname === "/" ? "mt-[100dvh]" : "mt-6"} `}
    >
      <slot />
    </main>
    <Footer />

    <style is:global>
      :root {
        --red: #f12b42;
        --green: rgb(63, 174, 7);
        --blue: rgb(17, 40, 134);
        --skyblue: rgb(69, 206, 222);
      }

      @font-face {
        font-family: "Gilroy-Light";
        src: url("/fonts/gilroy-light-300.woff2") format("woff2");
        font-display: swap;
      }

      @font-face {
        font-family: "Gilroy-ExtraBold";
        src: url("/fonts/gilroy-extrabold-800.woff2") format("woff2");
        font-display: swap;
      }

      body {
        font-family: "Gilroy-Light", sans-serif;
      }
    </style>
  </body>
</html>
