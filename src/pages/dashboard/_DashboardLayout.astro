---
import EditIcon from "@/components/icons/EditIcon.astro";
import LogoutIcon from "@/components/icons/LogoutIcon.astro";
import PlusIcon from "@/components/icons/PlusIcon.astro";
import MinimalLayout from "@/layouts/MinimalLayout.astro";
---

<MinimalLayout title="Dashboard">
  <div class="dashboard">
    <div class="left">
      <a href="/dashboard/nuevo"><PlusIcon /></a>
      <a href="/dashboard/editar"><EditIcon /></a>
      <form action="/api/auth/logout">
        <button type="submit"><LogoutIcon /></button>
      </form>
    </div>
    <div class="right">
      <slot />
    </div>
  </div>
</MinimalLayout>

<style>
  .dashboard {
    display: flex;
    gap: 1rem;
  }

  .left {
    width: 40px;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.15rem;

    > * {
      aspect-ratio: 1;
      display: grid;
      place-content: center;
      border-radius: 4px;
      border: 2px solid;
      border-color: white black black white;

      &:active {
        border-color: black white white black;
        translate: 0 3px;
      }
    }

    form {
      button {
        width: 100%;
        height: 100%;
      }
    }
  }

  .right {
    flex: 1;
  }
</style>
