<style>
  li:nth-child(odd) {
    @media (width < 768px) {
      &::before {
        left: -0.375rem;
      }
    }

    @media (width >= 768px) {
      transform: translateX(-100%);
      text-align: right;
      padding-left: 0;
      padding-right: 1rem;
      &::before {
        right: -0.375rem;
      }
    }
  }

  li:nth-child(even) {
    &::before {
      left: -0.375rem;
    }
  }

  @supports (animation-timeline: view()) {
    li {
      transform-origin: left;
      animation: item-animation linear both;
      animation-timeline: view();

      &::before {
        animation: before-animation linear both;
        animation-timeline: view();
      }
    }
  }

  @keyframes item-animation {
    0% {
      opacity: 0;
      scale: 0.8;
    }

    25% {
      opacity: 1;
      scale: 1;
    }

    75% {
      opacity: 1;
      scale: 1;
    }

    100% {
      opacity: 0;
      scale: 0.8;
    }
  }

  @keyframes before-animation {
    0% {
      scale: 1;
    }

    35% {
      scale: 1.25;
    }

    65% {
      scale: 1.25;
    }

    100% {
      scale: 1;
    }
  }

  .table-container {
    overflow-x: auto;
    scrollbar-width: thin;
  }

  table {
    margin-top: 4rem;
    margin-inline: auto;
    border: 1px solid black;
    font-size: 0.75rem;

    @media (width >= 640px) {
      font-size: 1rem;
    }

    & th,
    & td {
      border: 1px solid black;
      padding: 0.5rem;
    }

    thead {
      background-color: gray;
    }

    tbody {
      tr:nth-child(odd) {
        background-color: rgb(235, 235, 235);
      }

      tr:nth-child(even) {
        background-color: rgb(196, 196, 185);
      }
    }
  }
</style>
