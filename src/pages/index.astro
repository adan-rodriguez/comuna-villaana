---
import Photos from "../components/Photos.astro";
import SitiosDeInteres from "../components/SitiosDeInteres.astro";
import Slider from "../components/Slider.astro";
import TelefonosUtiles from "../components/TelefonosUtiles.astro";
import Tramites from "../components/Tramites.astro";
import Videos from "../components/Videos.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Comuna de Villa Ana">
  <div
    class="absolute bg-black top-0 w-full h-dvh max-h-[1080px] object-cover -z-10"
  >
    <video
      src="hero-video-phone.mp4"
      autoplay
      loop
      muted
      class="w-full h-full object-cover [mask-image:linear-gradient(to_top,black_0%,transparent_100%)]"
    ></video>
  </div>
  <main class="container mx-auto px-4 md:px-8 pb-4">
    <section
      class="flex flex-col gap-y-6 justify-center items-center h-[calc(100dvh-96px)] md:h-[calc(100dvh-128px)] max-h-[1080px] -translate-y-[48px] md:-translate-y-[64px] text-white"
    >
      <a
        href="#"
        class="font-brush text-4xl transition-all relative after:absolute after:w-0 after:h-[2px] after:-bottom-1 after:left-0 after:bg-custom-skyblue after:transition-all hover:after:w-full"
        >Noticias</a
      >
      <a
        href="#"
        class="font-brush text-4xl transition-all relative after:absolute after:w-0 after:h-[2px] after:-bottom-1 after:left-0 after:bg-custom-skyblue after:transition-all hover:after:w-full"
        >Comunicados</a
      >
      <a
        href="#"
        class="font-brush text-4xl transition-all relative after:absolute after:w-0 after:h-[2px] after:-bottom-1 after:left-0 after:bg-custom-skyblue after:transition-all hover:after:w-full"
        >Eventos</a
      >
      <a
        href="#tramites"
        class="font-brush text-4xl transition-all relative after:absolute after:w-0 after:h-[2px] after:-bottom-1 after:left-0 after:bg-custom-skyblue after:transition-all hover:after:w-full"
        >Tr√°mites</a
      >
      <a
        href="#contacto"
        class="font-brush text-4xl transition-all relative after:absolute after:w-0 after:h-[2px] after:-bottom-1 after:left-0 after:bg-custom-skyblue after:transition-all hover:after:w-full"
        >Contacto</a
      >
    </section>
    <Slider />
    <Tramites />
    <TelefonosUtiles />
    <Photos />
    <Videos />
    <SitiosDeInteres />
  </main>
</Layout>
