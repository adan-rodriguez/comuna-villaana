---
import SitiosDeInteres from "../components/SitiosDeInteres.astro";
// import Slider from "../components/Slider.astro";
import ContactosUtiles from "../components/ContactosUtiles.astro";
import Tramites from "../components/Tramites.astro";
import Layout from "../layouts/Layout.astro";
import MiPueblo from "../components/MiPueblo.astro";
// import FormularioContacto from "../components/FormularioContacto.astro";
import Hero from "@/components/Hero.astro";
import NoticiasList from "@/components/NoticiasList.astro";
---

<Layout
  title="Comuna de Villa Ana"
  description="Información sobre Villa Ana. Fotos, videos, historia y más. Información turística. Trámites y contactos."
>
  <Fragment slot="seo">
    <meta
      name="google-site-verification"
      content="zKnLFgOkYKzCryevPlefi-JDPn0vX4nxvHZz6R1CQIw"
    />

    <meta property="og:title" content="Comuna de Villa Ana" />
    <meta
      property="og:description"
      content="Información sobre Villa Ana. Fotos, videos, historia y más. Información turística. Trámites y contactos."
    />
    <meta property="og:url" content="https://villaana.gob.ar" />
    <meta property="og:site_name" content="Comuna de Villa Ana" />
    <meta property="og:locale" content="es_LA" />
    <meta property="og:image" content="https://villaana.gob.ar/logo.avif" />
    <meta property="og:image:alt" content="Logo de la Comuna de Villa Ana" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Comuna de Villa Ana" />
    <meta
      name="twitter:description"
      content="Información sobre Villa Ana. Fotos, videos, historia y más. Información turística. Trámites y contactos."
    />
    <meta name="twitter:image" content="https://villaana.gob.ar/logo.avif" />
    <meta name="twitter:image:alt" content="Logo de la comuna de Villa Ana" />
  </Fragment>
  <style is:inline slot="critical-css">
    .hero {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100dvh;
      max-height: 1080px;
      background: #000;
      z-index: 9;

      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        mask-image: linear-gradient(to top, black 0%, transparent 100%);
      }

      .hero-links {
        position: absolute;
        inset: 0px;
        margin: auto;
        display: flex;
        flex-direction: column;
        row-gap: 1.5rem;
        justify-content: center;
        align-items: center;
        color: white;

        a {
          font-family: "Lush", cursive;
          font-size: 2.25rem;
          position: relative;
          text-shadow: 0px 0px 4px #000000;

          &::after {
            content: "";
            position: absolute;
            width: 0px;
            height: 2px;
            bottom: -0.25rem;
            left: 0px;
            background-color: var(--skyblue);
            transition: width 150ms cubic-bezier(0.4, 0, 0.2, 1);
          }

          &:hover::after {
            width: 100%;
          }
        }
      }
    }
  </style>
  <Hero slot="hero" />
  <!-- <Slider /> -->
  <section>
    <div
      class="flex text-white max-w-screen-md mx-auto aspect-video grow rounded-lg [background-image:linear-gradient(to_right,transparent,#000000b3_50%,transparent),url(/collage-turismo.avif)] bg-cover bg-center bg-black hover:scale-[1.025] focus-within:scale-[1.025] transition-transform duration-300 shadow-xl shadow-black active:translate-y-1"
    >
      <a
        href="/turismo"
        class="self-stretch flex justify-center items-center w-full px-4 py-2"
        ><h2
          class="text-center text-balance font-black text-3xl [text-shadow:0px_0px_4px_#000000]"
        >
          <span class="uppercase">Visitá Villa Ana</span>
          <span class="block font-normal text-base opacity-90"
            >Mirá un poco de lo que vas a conocer</span
          >
        </h2></a
      >
    </div>
  </section>
  <section id="pueblo" class="pt-20">
    <h2
      class="font-bold mb-12 text-3xl pb-1 bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat"
    >
      Mi pueblo
    </h2>
    <MiPueblo />
    <div
      class="flex flex-col bg-black mt-20 rounded h-[calc(100dvh-2rem)] shadow-xl shadow-black"
    >
      <picture class="w-full h-0 grow">
        <source media="(max-width: 767px)" srcset="villaana-aerea-phone.avif" />
        <img
          src="villaana-aerea-desktop.avif"
          alt="Foto aerea de Villa Ana"
          class="w-full h-full object-cover object-bottom [mask-image:linear-gradient(to_bottom,black,transparent_100%)]"
        />
      </picture>
      <div
        class="text-white p-4 *:max-w-prose *:text-pretty md:text-center flex flex-col items-center"
      >
        <p>
          La comuna de Villa Ana se sitúa al nordeste de la provincia de Santa
          Fe, en el departamento General Obligado, a 439 km de la capital
          provincial.
        </p>
      </div>
    </div>
  </section>
  <section class="pt-20">
    <h2
      class="font-bold mb-12 text-3xl bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat pb-1"
    >
      Noticias
    </h2>
    <NoticiasList />
    <div class="flex justify-end mt-8">
      <a href="/noticias" class="underline underline-offset-8">Más noticias</a>
    </div>
  </section>
  <section id="tramites" class="pt-20">
    <h2
      class="font-bold mb-12 text-3xl bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat pb-1"
    >
      Trámites
    </h2>
    <Tramites slice="2" />
    <div class="flex justify-end mt-8">
      <a href="/tramites" class="underline underline-offset-8">Más trámites</a>
    </div>
  </section>
  <section id="contactosutiles" class="pt-20">
    <h2
      class="font-bold mb-12 text-3xl bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat p-1"
    >
      Contactos útiles
    </h2>
    <ContactosUtiles />
    <div class="flex justify-end mt-8">
      <a href="/contactosutiles" class="underline underline-offset-8"
        >Más contactos</a
      >
    </div>
  </section>
  <section id="sitiosdeinteres" class="pt-20">
    <h2
      class="font-bold mb-12 text-3xl pb-1 bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat"
    >
      Sitios de interés
    </h2>
    <SitiosDeInteres slice="2" />
    <div class="flex justify-end mt-8">
      <a href="/sitiosdeinteres" class="underline underline-offset-8"
        >Más sitios de interés</a
      >
    </div>
  </section>
  <!-- <section id="contactanos" class="pt-20">
    <h2
      class="font-bold mb-12 text-3xl bg-[linear-gradient(to_right,var(--red),var(--green),var(--blue))] bg-[length:100%_4px] bg-left-bottom bg-no-repeat pb-1"
    >
      Envíanos un correo
    </h2>
    <FormularioContacto />
  </section> -->
</Layout>
